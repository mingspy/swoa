@model YJ.Data.Model.Log
@{
    ViewBag.Title = "Detail";
}
    <style type="text/css">
        pre{word-break:break-all;font-family:'Courier New';word-wrap:break-word;white-space:pre-wrap;}
    </style>
    <style type="text/css" media="print">
        .Noprint { display: none; }
    </style>
    <div class="toolbar Noprint" style="margin-top:0; border:none 0; position:fixed; top:0px; left:0; right:0; margin-left:auto; z-index:999; width:100%; margin-right:auto; height:30px;">
        <a href="javascript:void(0);" onclick="window.print();" title="">
            <i class='fa fa-print' style="font-size:14px;"></i><label>打印</label>
        </a>
        <span class="toolbarsplit">&nbsp;</span>
        <a href="javascript:void(0);" onclick="new RoadUI.Window().close();" title="">
            <i class='fa fa-remove' style="font-size:14px;"></i><label>关闭窗口</label>
        </a>
    </div>
    <table cellpadding="0" cellspacing="1" border="0" width="99%" class="formtable" style="margin-top:40px;">
        <tr>
            <th style="width:100px;">日志标题：</th>
            <td style="word-break:break-all;">@Model.Title</td>
        </tr>
        <tr>
            <th>日志类型：</th>
            <td>@Model.Type</td>
        </tr>
        <tr>
            <th>发生时间：</th>
            <td>@Model.WriteTime.ToDateTimeStringS()</td>
        </tr>
        <tr>
            <th>操作人员：</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th>发生IP：</th>
            <td>@Model.IPAddress</td>
        </tr>
        <tr>
            <th>操作地址：</th>
            <td style="word-break:break-all;">@Model.URL</td>
        </tr>
        <tr>
            <th>客户端信息：</th>
            <td>@Model.Others</td>
        </tr>
        @if(!Model.Contents.IsNullOrEmpty())
        {
        <tr>
            <th>日志内容：</th>
            <td><textarea class="mytextarea" style="width:99%; height:200px;word-break:break-all; font-family:'Courier New';word-wrap:break-word;">@Model.Contents</textarea>
             </td>
        </tr>
        }
        @if(!Model.OldXml.IsNullOrEmpty())
        {
        <tr>
            <th>修改前：</th>
            <td><textarea class="mytextarea" style="width:99%; height:200px;word-break:break-all; font-family:'Courier New';word-wrap:break-word;">@Model.OldXml</textarea>
                </td>
        </tr>
        }
        @if(!Model.NewXml.IsNullOrEmpty())
        {
        <tr>
            <th>修改后：</th>
            <td><textarea class="mytextarea" style="width:99%; height:200px;word-break:break-all; font-family:'Courier New';word-wrap:break-word;">@Model.NewXml</textarea>
                </td>
        </tr>
        }
    </table>
  
